<div class="fileDropRoot" data-path="{{path}}">
	<div class="dir-header">{{path}}</div>
	<div class="dir-entries white">
		<table class="table table-striped">

		{{#each entries}}
		<tr>
			{{#if isDirectory}}
				<td class="dir-entry dir" data-path="{{path}}" data-hidden="{{isHidden}}"><a href="#" data-path="{{path}}">{{name}}</a></td>
			{{else}}
				<td class="dir-entry file" data-path="{{path}}" data-hidden="{{isHidden}}">
					<a href="{{url}}">{{name}}</a>
					<a href="#" data-path="{{path}}"><i class="icon-remove"></i></a>
				</td>
			{{/if}}
			</tr>
		{{/each}}

	</table>
	</div>
</div>

<script>
	$(document).ready(function() {
		$('[data-hidden="true"]').hide();
	});
</script>
