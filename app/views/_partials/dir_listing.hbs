<div class="fileDropRoot" data-path="{{path}}">
	<div class="dir-header">{{path}}</div>
	<div class="dir-entries white">
		<table cellspacing="1" id="sortme" class="tablesorter table table-striped">
			<thead><tr><th>File Name</th><th>Size</th></tr></thead>
			<tbody>
		{{#each entries}}
		<tr>
			{{#if isDirectory}}
				<td class="dir-entry dir" data-path="{{path}}" data-hidden="{{isHidden}}"><a href="#" data-path="{{path}}">{{name}}</a></td>
				<td class="dir-entry dir" data-path="{{path}}" data-hidden="{{isHidden}}">10</td>
			{{else}}
				<td class="dir-entry file" data-path="{{path}}" data-hidden="{{isHidden}}" data-blobsize="{{size}}">
					<a href="{{url}}">{{name}}</a>
				<td data-hidden="{{isHidden}}" >{{prettySize}}</td>
					<td data-hidden="{{isHidden}}" ><span class="modified"> â€¢ {{prettyDate}}</span></td>

					<a href="#" data-path="{{path}}" data-action="delete"><span class="glyphicon glyphicon-remove"></span></a>

				</td>
			{{/if}}
			</tr>
		{{/each}}
	</tbody>
	</table>
	</div>
</div>

<script>
	$(document).ready(function() {

    // call the tablesorter plugin

    $("table").tablesorter();
		$('[data-hidden="true"]').hide();

	});
</script>
